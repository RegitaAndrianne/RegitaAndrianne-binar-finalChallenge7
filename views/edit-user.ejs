<html lang="en">
<%- include('partials/head', {
    titlePage: 'User Edit'
}); %> 
  <body>
    <%- include('partials/navbar-logout') %> 
    <%- include('partials/sidebar') %> 

    <div class="container-fluid">
      <div class="row">

        <main role="main" class="col-md-9 ms-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Edit User Data</h1>
          </div>

          <form method="POST" action="/user/update">
            <div class="mb-3">
              <label class="form-label">Username</label>
              <input type="username" name="username" class="form-control" value="<%= user.username %>"/>
            </div>

            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" value="<%= user.email %>"/>
            </div>

            <div class="mb-3">
              <input type="hidden" name="id" min="1" class="form-control" value="<%= history.password %>"/>
            </div>

            <button type="submit" class="btn btn-success">Saved</button>
          </form>
        </main>
      </div>
    </div>
    <%- include('../partials/script'); %>
  </body>
</html>